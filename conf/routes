#redirect paths with a trailing slash
GET           /*path/                   controllers.Application.untrail(path: String)

# Home page
GET           /                         controllers.Application.index

#API REST
#languages
GET           /api/languages            controllers.api.Languages.select(id :Option[Int] = None)
GET           /api/languages/:id        controllers.api.Languages.select(id:Option[Int])
POST          /api/languages/:id        controllers.api.Languages.update(id:Int)
PUT           /api/languages            controllers.api.Languages.insert()
DELETE        /api/languages/:id        controllers.api.Languages.delete(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file             controllers.Assets.at(path="/public", file)


